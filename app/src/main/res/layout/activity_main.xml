<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3E2EF"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/editTextCelsius"
        style="32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B5C7D3"
        android:gravity="center_vertical|end"
        android:hint="Enter temperature in Celsius"
        android:inputType="numberSigned|numberDecimal"
        android:padding="12dp"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textColorHint="#7B7B7B"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="138dp"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#7B48AA"
        android:padding="12dp"
        android:text="Calculate"
        android:textColor="#fff"
        android:textSize="18sp"
        app:cornerRadius="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="68dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textViewFahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="#000"
        android:textSize="26sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="68dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textViewKelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        android:textSize="26sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="68dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        android:textSize="24sp" />

</LinearLayout>
